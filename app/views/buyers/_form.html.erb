<%= form_for @buyer do |b| %>
        <div>
            <%= b.label :email %>
            <%= b.email_field :email %>
            
        </div>

        <div>
            <%= b.label :password %>
            <%= b.password_field :password %>
        </div>

        <div>
            <%= b.label :first_name %>
            <%= b.text_field :first_name %>
        </div>

        <div>
            <%= b.label :last_name %>
            <%= b.text_field :last_name %>
        </div>

        <div>
            <%= b.label :sex %>
            <%= b.select :sex, ['Male', 'Female', 'Other'] %>
        </div>

        <div>
            <%= b.label :birthday%>
            <%= b.date_field :birthday %>
        </div>

        <%= b.submit "Done" %>
    <% end %>